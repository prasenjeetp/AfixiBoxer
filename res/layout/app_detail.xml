<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".AppDetail" >

   <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f2f2f2" >

        <TextView
            android:id="@+id/textView_companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="Roboto"
            android:text="B"
            android:textAlignment="center"
            android:textColor="#fd0006"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_companyName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView_companyName"
            android:fontFamily="Roboto"
            android:text="oxxrr"
            android:textAlignment="center"
            android:textColor="#3b5998"
            android:textSize="25sp"
            android:textStyle="bold" />

      
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar"
        android:background="#f2f2f2"
        tools:context=".MainActivity" >

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/ll_FreeApp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rr_FreeApp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="2dp"
                    android:background="#dddddd"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView_FreeAppIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/textView_FreeAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageView_FreeAppIcon"
                        android:fontFamily="Roboto"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_appCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView_FreeAppName"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/imageView_FreeAppIcon"
                        android:fontFamily="Roboto"
                        android:text=""
                        android:textColor="#a5abb4"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView_appPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView_appCompany"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/imageView_FreeAppIcon"
                        android:fontFamily="Roboto"
                        android:text=""
                        android:textColor="#a5abb4"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button_DownloadApp"
                        android:layout_width="75dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/download_green_button"
                        android:fontFamily="Roboto"
                        android:text="Free"
                        android:textColor="#ffffff" >
                    </Button>

                    <Button
                        android:id="@+id/button_ShareApp"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/button_DownloadApp"
                        android:layout_marginRight="19dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/share_button_gradiant"
                        android:fontFamily="Roboto"
                        android:text="Share"
                        android:textColor="#ffffff"
                        android:textSize="12sp" >
                    </Button>

                     <LinearLayout
                        android:id="@+id/ll_AppDis"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/button_ShareApp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="9dp"
                        android:background="#ffffff">
                         

                        <WebView
                            android:id="@+id/webView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" 
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            />

                        </LinearLayout>
                     
                       
                       <LinearLayout
                                android:id="@+id/ll_viewPager"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" 
                                android:layout_below="@+id/ll_AppDis"
                                android:background="#ffffff"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="5dp">
                                
                        
                         <LinearLayout
                                android:id="@+id/kghf"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" 
                                android:background="#dddddd"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="9dp"
                                 android:layout_marginBottom="9dp"
                                >  
                          
                     <ImageView
						            android:id="@+id/imageView_preAppScreen"
						            android:layout_width="fill_parent"
						            android:layout_height="wrap_content"
						             android:adjustViewBounds="true"
						             android:layout_gravity="center"
						             android:layout_marginTop="2.5dp"
						             android:layout_marginLeft="2.5dp"
						             android:layout_marginRight="2.5dp"
						             android:layout_marginBottom="2.5dp"
						             
						             />
                    
                    </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

           </RelativeLayout>

</RelativeLayout>